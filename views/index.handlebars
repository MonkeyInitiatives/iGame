<div id="home">
  <div class="container">
    <div class="row">
      <div class="col">
        {{#each user}}
        <style>
          body {
            background-image:url({{backgroundimage}});
            background-repeat: no-repeat;
            background-size: 100vw 100vh;
          }
        </style>
        <nav class="navbar navbar-light bg-light justify-content-between accentColor rounded"
          style="background-color:{{accentcolor}} !important;">
          {{/each}}
          <img src="./images/logo.png" class="logo">
          <button type="button" class="settings btn btn-primary text-center rounded my-2 my-sm-0"><a class="navbar-brand"
              data-toggle="modal" data-target="#userModal">Account</a>
          </button>
          </button>
          <input class="form-control rounded" id="searchText" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-primary text-center rounded my-2 my-sm-0" id="searchButton" type="submit">Search
          </button>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8">
        <div class="row">
          {{!-- <h1>Game Library</h1> --}}
          <input id="basics" />
        </div>
        <div class="row">
          <div class="wrapper rounded accentColor" id="gamelist-wrapper" style="background-color:{{accentcolor}} !important;">
            {{#each games}}
            {{> games/gamelist-block}}
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="wrapper rounded accentColor" style="background-color:{{accentcolor}} !important;" id="friendlist-wrapper">
          <input class="form-control mr-sm-2" id="friendText" type="search" placeholder="Search by email" aria-label="Search">
          <button class="btn btn-primary text-center rounded my-2 my-sm-0" id="friendButton" type="submit">Request Friendship</button>
          <h4>Friends</h4>
          {{#each friends}}
            {{> friends/friends-block}}
          {{/each}}
          {{!-- <h4>Requests</h4> --}}
          {{#each friendrequests}}
            {{> friends/friendrequests-block}}
          {{/each}}
          {{> friends/friendlist-block}}
        </div>
      </div>
    </div>
  </div>
  {{> modals/usermodal-block}}

  <div class="modal fade" id="searchModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Search Results</h1>
        </div>
        <div class="modal-body" id="searchModalInsertion">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="friendModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Friend Library</h1>
        </div>
        <div class="modal-body" id="friendModalInsertion">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

