<div id="home">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-8">
        {{#each user}}
        <style>
          body {
            background-image:url({{backgroundimage}});
            background-repeat: no-repeat;
            background-size: 100vw 100vh;
            background-attachment: fixed;
          }
        </style>
        <nav class="navbar navbar-light bg-light justify-content-between accentColor rounded"
          style="background-image: url(./images/mario.gif), url(./images/pokemon.gif); background-attachment: fixed; background-size: 33vw 36.5vh;">
          {{/each}}
          <img src="./images/logo.png" class="logo">
          </button>
          <input class="form-control rounded" id="searchText" type="search" placeholder="Search for games" aria-label="Search">
          <button class="btn btn-primary text-center rounded my-2 my-sm-0" id="searchButton" type="submit">Search
          </button>
           <button type="button" class="settings btn btn-primary text-center rounded my-2 my-sm-0"><a
              class="navbar-brand accountButton" data-toggle="modal" data-target="#userModal">Account</a>
          </button>
        </nav>

        {{!-- <h1>Game Library</h1> --}}
        <br>
        <div class="wrapper rounded justify-content-between accentColor bg-transparent" id="gamelist-wrapper"
          style="background-color:{{accentcolor}} !important;">
          <input id="basics"/>
          <br>
          {{#each games}}
          {{> games/gamelist-block}}
          {{/each}}
        </div>
        <br>
      </div>
      <div class="col-lg-4">
        <div class="wrapper rounded accentColor" style="background-color:{{accentcolor}} !important;"
          id="friendlist-wrapper">
          <input class="form-control mr-sm-2" id="friendText" type="search" placeholder="Search by email"
            aria-label="Search">
          <button class="btn btn-primary text-center rounded my-2 my-sm-0" id="friendButton" type="submit">Request
            Friendship</button>
            <br>
            <br>
          <h4>Friends</h4>
          {{#each friends}}
          {{> friends/friends-block}}
          {{/each}}
          {{!-- <h4>Requests</h4> --}}
          {{#each friendrequests}}
          {{> friends/friendrequests-block}}
          {{/each}}
          {{> friends/friendlist-block}}
        </div>
      </div>
    </div>

  </div>
  {{> modals/usermodal-block}}

  <div class="modal fade" id="searchModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Search Results</h1>
        </div>
        <div class="modal-body" id="searchModalInsertion">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="friendModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Friend Library</h1>
        </div>
        <div class="modal-body">
          <div id="friendModalInsertion">

          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

