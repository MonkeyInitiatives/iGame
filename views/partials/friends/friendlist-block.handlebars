<h2 class="friend-chat-title text-center"><i class="fas fa-comments text-center" style="color: #7527FF"></i> Chat</h2>


<div id="chatbox">
    {{#each user}}
    <div id="chat-window">
        <div id="chat-feedback"></div>
        <div id="chat-output"></div>
    </div>
    {{!-- <div  > --}}
    {{!-- {{name}} --}}
    <input id="chat-name" type="text" placeholder="Name">

    {{!-- </div> --}}
    <input id="chat-message" type="text" placeholder="Message">
    <button id="chat-send-btn" style="background-color: #7527FF">Send</button>
    {{/each}}
</div>
